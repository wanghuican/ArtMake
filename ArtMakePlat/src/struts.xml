<?xml version="1.0" encoding="UTF-8"?>
<!-- 指定Struts2配置文件的DTD信息 -->
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<!-- Struts2配置文件的根元素 -->
<struts>
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"></constant>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
	<!-- 配置了系列常量 -->
	<package name="default" namespace="/" extends="struts-default">
   		<!-- 登录配置 -->
		<action name="login" class="cn.edu.xmu.action.LoginAction">
			<result name="loginSuccess">/WEB-INF/main/index.jsp</result>
			<result name="input">/WEB-INF/main/user.jsp</result>
		</action>
		<action name="logout" class="cn.edu.xmu.action.LogoutAction">
			<result name="exit">/WEB-INF/main/user.jsp</result>
		</action>
		<action name="forward" class="cn.edu.xmu.action.ForwardAction">
		    <result name="user">/WEB-INF/main/user.jsp</result>
			<result name="index">/WEB-INF/main/index.jsp</result>
			<result name="info">/WEB-INF/main/article/info_edit.jsp</result>
			<result name="adminLogin">/WEB-INF/backstage/adminLogin.jsp</result>
			<result name="about">/WEB-INF/backstage/about.jsp</result>
		</action>
		<action name="register" class="cn.edu.xmu.action.RegisterAction">
			<result name="registerSuccess">/WEB-INF/main/index.jsp</result>
			<result name="input">/WEB-INF/main/user.jsp</result>
		</action>
		<action name="uploadinfo" class="cn.edu.xmu.action.UploadArticleAction">
			<result name="success">/WEB-INF/main/index.jsp</result>
		</action>
	</package>
	<package name="backstage" namespace="/" extends="struts-default">
		<action name="adminLogin" class="cn.edu.xmu.backstage.action.AdminLoginAction">
			<result name="loginSuccess">/WEB-INF/backstage/main.jsp</result>
			<result name="input">/WEB-INF/backstage/adminLogin.jsp</result>
     	</action>
     	<action name="articleCheck" class="cn.edu.xmu.backstage.action.InfomationAction">
			<result name="input">/WEB-INF/backstage/information/info_list.jsp</result>
			<result name="show">/WEB-INF/backstage/information/info_show.jsp</result>
     	</action>
	</package>
	<package name="ajax" extends="struts-default,json-default">
	<action name="articleCheckAjax" method="changePass" class="cn.edu.xmu.backstage.action.InfomationAction">
		<!-- 返回json类型数据 -->
		<result type="json">
			<param name="root">result</param>
		</result>
	</action>
		
	</package>
</struts>