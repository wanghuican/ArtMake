<!-- Struts2配置文件的根元素 -->
<struts>
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"></constant>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
	<!-- 配置了系列常量 -->
	<package name="default" extends="struts-default">
   		<!-- 登录配置 -->
		<action name="login" class="cn.edu.xmu.action.LoginAction">
			<result name="loginSuccess" type= "redirect">article</result>
			<result name="input">/WEB-INF/main/user.jsp</result>
		</action>
		<action name="logout" class="cn.edu.xmu.action.LogoutAction">
			<result name="exit">/WEB-INF/main/user.jsp</result>
		</action>
		<action name="forward" class="cn.edu.xmu.action.ForwardAction">
		    <result name="user">/WEB-INF/main/user.jsp</result>
			<result name="info">/WEB-INF/main/article/info_edit.jsp</result>
			<result name="ad">/WEB-INF/main/article/ad_edit.jsp</result>
			<result name="adminLogin">/WEB-INF/backstage/adminLogin.jsp</result>
			<result name="about">/WEB-INF/backstage/about.jsp</result>
			<result name="admininfo">/WEB-INF/backstage/article/info_edit.jsp</result>
			<result name="adminad">/WEB-INF/backstage/article/ad_edit.jsp</result>
			<result name="repassword">/WEB-INF/backstage/other/repassword.jsp</result>
		</action>
		<action name="register" class="cn.edu.xmu.action.RegisterAction">
			<result name="registerSuccess">/WEB-INF/main/index.jsp</result>
			<result name="input">/WEB-INF/main/user.jsp</result>
		</action>
		<action name="uploadArticle" class="cn.edu.xmu.action.UploadArticleAction">
			<result name="success" type= "redirect">article</result>
		</action>
		<action name="uploadProduct" class="cn.edu.xmu.action.UploadProductAction">
			<result name="success" type= "redirect">article</result>
		</action>
		
		<action name="article" class="cn.edu.xmu.action.ArticleAction">
	    	<result name="success">/WEB-INF/main/index.jsp</result>
	    	<result name="detail">/WEB-INF/main/article/info_detail.jsp</result>
	    	<result name="addetail">/WEB-INF/main/article/ad_detail.jsp</result>
	    </action>
	    <action name="person" class="cn.edu.xmu.action.PersonAction">
	    	<result name="userinfo">/WEB-INF/main/person/user.jsp</result>
	    	<result name="artistinfo">/WEB-INF/main/person/artist.jsp</result>
	    	<result name="improve">/WEB-INF/main/person/improve_info.jsp</result>
	    	<result name="repassword">/WEB-INF/main/person/repassword.jsp</result>
	    </action>
	     <action name="product" class="cn.edu.xmu.action.ProductAction">
	        <result name="success">/WEB-INF/main/action.jsp</result>
	    	<result name="edit">/WEB-INF/main/product/product_edit.jsp</result>
	    	<result name="detail">/WEB-INF/main/product/product_detail.jsp</result>
	    	<result name="put">/WEB-INF/main/product/product_put.jsp</result>
	    </action>
	     <action name="mall" class="cn.edu.xmu.action.MallAction">
	        <result name="success">/WEB-INF/main/mall.jsp</result>
	    </action>
	     <action name="demand" class="cn.edu.xmu.action.DemandAction">
	        <result name="success">/WEB-INF/main/demand.jsp</result>
	    	<result name="edit">/WEB-INF/main/demand/demand_edit.jsp</result>
	    	<result name="detail">/WEB-INF/main/demand/demand_detail.jsp</result>
	    	<result name="put">/WEB-INF/main/demand/demand_put.jsp</result>
	    </action>
	     <action name="order" class="cn.edu.xmu.action.OrderAction">
	     <result name="detail">/WEB-INF/main/demand/demand_detail.jsp</result>
	    </action>
	</package>
	<package name="backstage" extends="struts-default">
